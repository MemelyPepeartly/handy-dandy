<form class="schema-tool">
  <div class="form-group">
    <label>Select Document Type:</label>
    <select name="doc-type">
      {{#each docNames}}
        <option value="{{this}}" {{#if (eq this ../selected)}}selected{{/if}}>{{this}}</option>
      {{/each}}
    </select>
  </div>

  <hr>

  <section class="schema-list">
    <ul>
      {{#each schemaFields}}
        {{> schema-node key=@key field=this}}
      {{/each}}
    </ul>
  </section>
</form>

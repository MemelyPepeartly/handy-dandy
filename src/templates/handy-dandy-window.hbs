        <option value="gpt-4">gpt-4</option>
        <option value="gpt-4-turbo">gpt-4-turbo</option>
      </select>
    </div>

    <div class="form-group">
      <label for="hd-prompt">Prompt</label>
      <textarea id="hd-prompt" name="prompt" rows="8" placeholder="Describe what you'd like OpenAI to createâ€¦"></textarea>
    </div>

    <footer class="flexrow">
      <button type="button" class="generate-button">
        <i class="fas fa-magic"></i>&nbsp;Generate
      </button>
      <button type="button" class="clear-button">
        <i class="fas fa-eraser"></i>&nbsp;Clear
      </button>
    </footer>
  </form>
</section>